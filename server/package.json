{
  "name": "minimal-express-server",
  "version": "1.0.0",
  "description": "Minimal Express TypeScript Server",
  "main": "app.ts",
  "scripts": {
    "start": "nodemon src/app.ts",
    "build": "tsc",
    "test": "node --test --require ts-node/register src/tests/**/*.spec.ts",
    "coverage:test": "c8 node --test --require ts-node/register src/tests/**/*.spec.ts",
    "coverage:generate": "c8 report --reporter=html",
    "test:watch": "node --test --watch --require ts-node/register src/tests/**/*.spec.ts"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "c8": "^10.1.3",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
